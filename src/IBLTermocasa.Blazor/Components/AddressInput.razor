@using AddressDto = IBLTermocasa.Common.AddressDto
@using MudBlazor
@inherits IBLTermocasaComponentBase
<MudForm Model="@Value" Disabled="@Disabled">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="@(_internalValue.Street)" Label="@L["Street"]" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="@(_internalValue.City)" Label="@L["City"]"/>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudTextField @bind-Value="@(_internalValue.PostalCode)" Label="@L["PostalCode"]" />
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudTextField @bind-Value="@(_internalValue.Country)" Label="@L["Country"]"/>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudTextField @bind-Value="@(_internalValue.State)" Label="@L["State"]"/>
        </MudItem>
    </MudGrid>
</MudForm>
@code {
    private AddressDto _internalValue;
    [Parameter] public bool Disabled { get; set; }
    [Parameter]
    public AddressDto Value
    {
        get => _internalValue;
        set
        {
            if (_internalValue != value)
            {
                _internalValue = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public EventCallback<AddressDto> ValueChanged { get; set; }
}